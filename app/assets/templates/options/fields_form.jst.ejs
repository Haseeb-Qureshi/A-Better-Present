<div class="form-group">
  <label for="for">Recipient name<span class="required">*</span></label>
  <input type="text"
         class="form-control"
         name="card[for]"
         id="for"
         placeholder="<%= name %>"
         data-msg-required="Don't keep us in suspense! Who's it for?"
         data-msg-pattern="Don't keep us in suspense! Who's it for?"
         data-rule-required="true"
         data-rule-pattern="\w+">
</div>

<div class="form-group">
  <label for="from">Sender <small>(that's you)</small><span class="required">*</span></label>
  <input type="text"
         class="form-control"
         name="card[from]"
         id="from"
         placeholder="Your name"
         data-msg-required="Don't be shy. Tell them who you are!"
         data-msg-pattern="Don't be shy. Tell them who you are!"
         data-rule-required="true"
         data-rule-pattern="\w+">
</div>

<div class="form-group">
  <label for="amount">Gift amount<span class="required">*</span></label>
  <input type="text"
         class="form-control input-lg"
         placeholder="$50.00"
         id="amount"
         name="card[amount]"
         data-msg-pattern="It has to be at least $10."
         data-rule-required="true"
         data-rule-pattern="\$?.*[1-9]\d\.\d{2}">
  <p class="help-block"><small>Minimum: $10.00</small></p>
</div>
